{
	"extends": ["@commitlint/config-conventional"],
	"rules": {
		"type-empty": [2, "never"],
		"type-enum": [
			2,
			"always",
			[
				"feat",
				"fix",
				"docs",
				"style",
				"refactor",
				"test",
				"revert",
				"chore",
				"perf"
			]
		],
		"body-min-length": [2, "always", 4]
	}
}
